<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-0 col-sm-10 col-md-offset-0 col-md-8 col-lg-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Batch ID#<%= @batch.id %> | Actual Batch Values</h3>
      </div> <!-- end panel heading -->
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Size</dt>
              <dd><%= @batch.size %></dd>

              <dt>Brew date</dt>
              <dd><%= @batch.brew_date %></dd>

              <dt>Bottle date</dt>
              <dd><%= @batch.bottle_date %></dd>

              <dt>Original Gravity</dt>
              <dd><%= @batch.aog %></dd>

              <dt>Final Gravity</dt>
              <dd><%= @batch.afg %></dd>

              <dt>Alchohol by Volume(ABV)</dt>
              <dd><%= @batch.aabv %></dd>

              <dt>Aroma</dt>
              <dd><%= @batch.aaroma %></dd>

              <dt>IBUs</dt>
              <dd><%= @batch.aibu %></dd>

              <dt>Image</dt>
              <dd><%= image_tag @batch.image, :class => "img-responsive" %></dd>

              <dt>Flavor Profile</dt>
              <dd><%= @batch.aflavpro %></dd>

              <dt>User</dt>
              <dd><%= @batch.user.email %></dd>

              <dt>Recipe</dt>
              <dd><%= @batch.recipe.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), batches_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_batch_path(@batch), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @batch, method: :delete, data: { confirm: "Do you really want to delete this batch?" }, class: "btn btn-danger" %>
            </div>
          </div>
          </ul>
        </div>
      </div>
    </div> <!-- end div panel -->
</div> <!-- end div col -->

<div class="col-lg-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @batch.reviews.count %> Reviews.</h3>
    </div>
      <h5 align="center">Here's what your fans are saying:</h5>
    <div class="panel-body">
      <ul class="list-group">
            <% @batch.reviews.each do |review| %>
              <li class="list-group-item">"<%= link_to review.headline, review %>" <%= review.user.username %> rates this batch a <%= review.overall_rating %> out of 5.</li>
            <% end %>
          </ul>
    </div>
  </div>
    <%#= form_tag("/batches/#{params[:id]}/generate_uniques", method:"post") do %>
    <%= form_tag("/batches/#{params[:id]}/generate_unis", method:"post") do %>
      <div align="center">
        <!-- <label for="new uniques numbers" >Input Number of Unique IDs: </label> -->
        <label for="new uni numbers" >Enter Number of IDs Needed: </label>
        <!-- <input name="unique_num" type="text" id="first"> -->
        <input name="uni_num" type="text" id="first">
        <!-- <input align="right" type="submit" value="Generate IDs"> -->
        <input align="right" type="submit" value="Generate Uni IDs">
      </div>
    <% end %>

<br>
<div class="row">

  <div class="col-lg-5">
    <div class="panel panel-success">
      <div class="panel-heading">
        <div class="panel-title">
        <% @unis.each do |uni| %>
         <li><%= uni.rand_num %></li>
        <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-5">
    <% @batch.unis.each do |uni| %>
      <li class="list-group-item"><%= uni.rand_num %></li>
    <% end %>
  </div>

</div>

</div>


