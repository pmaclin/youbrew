<div class="page-header">
  <h1>
    My Batches
  </h1>
    <h3>Add a New Batch <%= link_to icon('plus'), new_batch_path, class: "btn btn-lg btn-success" %>
    </h3>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Batches (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @batches.each do |batch| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Batch #<%= batch.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Size</dt>
          <dd><%= batch.size %></dd>

          <dt>Brew date</dt>
          <dd><%= batch.brew_date %></dd>

          <dt>Bottle date</dt>
          <dd><%= batch.bottle_date %></dd>

          <dt>Aog</dt>
          <dd><%= batch.aog %></dd>

          <dt>Afg</dt>
          <dd><%= batch.afg %></dd>

          <dt>Aabv</dt>
          <dd><%= batch.aabv %></dd>

          <dt>Aaroma</dt>
          <dd><%= batch.aaroma %></dd>

          <dt>Aibu</dt>
          <dd><%= batch.aibu %></dd>

          <dt>Image</dt>
          <dd><%= batch.image %></dd>

          <dt>Aflavpro</dt>
          <dd><%= batch.aflavpro %></dd>

          <dt>User</dt>
          <dd><%= batch.user %></dd>

          <dt>Recipe</dt>
          <dd><%= batch.recipe %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <%= link_to icon('search-plus'), batch, class: "btn btn-primary" %>

          <%= link_to icon('edit'), edit_batch_url(batch), class: "btn btn-warning" %>

          <%= link_to icon('trash-o'), batch, method: :delete, data: { confirm: "Do you really want to delete this batch?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
