<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Uni #<%= @uni.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Rand num</dt>
              <dd><%= @uni.rand_num %></dd>

              <dt>Batch</dt>
              <dd><%= @uni.batch_id %></dd>

              <dt>User</dt>
              <dd><%= @uni.user_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), unis_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_uni_path(@uni), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @uni, method: :delete, data: { confirm: "Do you really want to delete this uni?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
