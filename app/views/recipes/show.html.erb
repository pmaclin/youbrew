<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recipe Name: <%= @recipe.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <!-- <dt>Name</dt> -->
              <dd><%#= @recipe.name %></dd>

              <dt>Brew type</dt>
              <dd><%= @recipe.brew_type %></dd>

              <dt>Description</dt>
              <dd><%= @recipe.description %></dd>

              <dt>Target Original</dt>
              <dd><%= @recipe.tog %></dd>

              <dt>Target Final Gravity</dt>
              <dd><%= @recipe.tfg %></dd>

              <dt>Tabv</dt>
              <dd><%= @recipe.tabv %></dd>

              <dt>Target Aroma</dt>
              <dd><%= @recipe.taroma %></dd>

              <dt>Target IBUs</dt>
              <dd><%= @recipe.tibu %></dd>

              <dt>Label</dt>
              <dd><%= @recipe.label %></dd>

              <dt>Target Flavor Profile</dt>
              <dd><%= @recipe.tflavpro %></dd>

              <dt>User</dt>
              <dd><%= @recipe.user.email %></dd>

              <dt>Style</dt>
              <dd><%= @recipe.style.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), recipes_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_recipe_path(@recipe), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @recipe, method: :delete, data: { confirm: "Do you really want to delete this recipe?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
<hr>
            <div align="right">
            <!-- This code lets the newly created batch know from which recipe it came. -->
              Create a new batch: <%= link_to icon('plus'), new_batch_path( :recipe_id => params[:id] ), class: "btn btn-lg btn-success" %>
            </div>
<hr>
            </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
