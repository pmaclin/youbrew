<div class="page-header">
  <h1>
    My Recipes
    </h1>
    <h3>Add a New Recipe <%= link_to icon('plus'), new_recipe_path, class: "btn btn-lg btn-success" %>
    </h3>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Recipes (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @recipes.each do |recipe| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recipe: <%= recipe.name %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Brew type</dt>
          <dd><%= recipe.brew_type %></dd>

          <dt>Description</dt>
          <dd><%= recipe.description %></dd>

          <dt>Tog</dt>
          <dd><%= recipe.tog %></dd>

          <dt>Tfg</dt>
          <dd><%= recipe.tfg %></dd>

          <dt>Tabv</dt>
          <dd><%= recipe.tabv %></dd>

          <dt>Taroma</dt>
          <dd><%= recipe.taroma %></dd>

          <dt>Tibu</dt>
          <dd><%= recipe.tibu %></dd>

          <dt>Label</dt>
          <dd><%= recipe.label %></dd>

          <dt>Tflavpro</dt>
          <dd><%= recipe.tflavpro %></dd>

          <dt>User</dt>
          <dd><%= recipe.user.email %></dd>

          <dt>Style</dt>
          <dd><%= recipe.style.name %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <%= link_to icon('search-plus'), recipe, class: "btn btn-primary" %>

          <%= link_to icon('edit'), edit_recipe_url(recipe), class: "btn btn-warning" %>

          <%= link_to icon('trash-o'), recipe, method: :delete, data: { confirm: "Do you really want to delete this recipe?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
