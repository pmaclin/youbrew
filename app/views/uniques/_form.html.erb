<%= simple_form_for(@unique) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rand_num %>
    <%= f.association :batch, collection: Batch.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

