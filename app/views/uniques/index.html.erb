<div class="page-header">
  <h1>
    Uniques
    <%= link_to icon('plus'), new_unique_path, class: "btn btn-lg btn-success" %>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Uniques (start typing)" class="form-control">
  </div>
</div>

<hr>

<hr>
<div class="panel panel-default">
  <div class="panel-heading">UNIQUE NUMBERS CREATED</div>

    <table class="table" align="left">
      <thead>
          <tr>
              <th>Unique ID</th>
              <th>Batch ID</th>
              <th>Recipe Name</th>
              <th>Unique Number</th>
              <th>Controls</th>
          </tr>
      </thead>
      <tbody>
      <% @uniques.each do |unique| %>

          <tr>
            <td><%= unique.id %></td>
            <td><%= unique.batch_id %></td>
            <td><%= unique.batch.recipe.name %></td>
            <td><%= unique.rand_num %></td>
            <td>
          <%= link_to icon('search-plus'), unique, class: "btn btn-primary" %>

          <%= link_to icon('edit'), edit_unique_url(unique), class: "btn btn-warning" %>

          <%= link_to icon('trash-o'), unique, method: :delete, data: { confirm: "Do you really want to delete this unique?" }, class: "btn btn-danger" %>

        </td>
          </tr>
      <% end %>
      </tbody>
    </table>
</div>


<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
